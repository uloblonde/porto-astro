---
const services = [
    {
        title: "Web Development",
        description:
            "Custom web applications built with modern frameworks and best practices for optimal performance.",
        features: [
            "React/Vue/Angular",
            "TypeScript",
            "API Integration",
            "State Management",
        ],
    },
    {
        title: "UI/UX Implementation",
        description:
            "Pixel-perfect implementation of designs with attention to every detail and interaction.",
        features: [
            "Responsive Design",
            "CSS/Tailwind",
            "Animations",
            "Accessibility",
        ],
    },
    {
        title: "Performance Optimization",
        description:
            "Speed optimization and code refinement to ensure your application runs at peak performance.",
        features: [
            "Code Splitting",
            "Lazy Loading",
            "SEO Optimization",
            "Bundle Analysis",
        ],
    },
    {
        title: "Maintenance & Support",
        description:
            "Ongoing support and updates to keep your application secure, modern, and bug-free.",
        features: ["Bug Fixes", "Updates", "Monitoring", "Documentation"],
    },
];
---

<section id="services" class="min-h-screen py-20 px-6 bg-black">
    <div class="container mx-auto">
        <div class="max-w-6xl mx-auto space-y-16">
            <div class="text-center space-y-6">
                <h2
                    class="text-4xl md:text-6xl font-bold tracking-wider"
                    style="font-family: var(--font-gothic);"
                >
                    Services
                </h2>
                <div class="h-1 w-24 bg-white mx-auto"></div>
                <p
                    class="text-lg text-gray-light leading-relaxed max-w-2xl mx-auto"
                >
                    Comprehensive frontend development services tailored to
                    bring your vision to life with precision and excellence.
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-8">
                {
                    services.map((service, index) => (
                        <div
                            class="group bg-gradient-to-br from-gray-dark to-black border-4 border-white p-8 space-y-6 hover:border-gray-light transition-all duration-300 shadow-[12px_12px_0px_0px_rgba(255,255,255,1)] hover:shadow-[16px_16px_0px_0px_rgba(133,133,133,1)] hover:translate-x-[-4px] hover:translate-y-[-4px]"
                            style={`animation: zoom-in 0.6s ease-out ${index * 0.15}s both;`}
                        >
                            <div class="space-y-4">
                                <h3 class="text-3xl font-bold uppercase tracking-wider">
                                    {service.title}
                                </h3>
                                <div class="h-0.5 w-16 bg-white group-hover:w-24 transition-all duration-300" />
                                <p class="text-gray-light leading-relaxed">
                                    {service.description}
                                </p>
                            </div>

                            <ul class="space-y-2">
                                {service.features.map((feature) => (
                                    <li class="flex items-center gap-3 text-gray-light">
                                        <span class="w-2 h-2 bg-white" />
                                        <span>{feature}</span>
                                    </li>
                                ))}
                            </ul>

                            <div class="pt-4">
                                <a
                                    href="#contact"
                                    aria-label="Get Started"
                                    class="inline-block border-2 border-white px-6 py-3 uppercase tracking-wider text-sm hover:bg-white hover:text-black transition-all duration-300"
                                >
                                    Get Started
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>

            <div
                class="bg-white text-black p-12 border-4 border-white shadow-[16px_16px_0px_0px_rgba(61,61,61,1)]"
            >
                <div class="max-w-3xl mx-auto text-center space-y-6">
                    <h3
                        class="text-3xl md:text-4xl font-bold tracking-wider"
                        style="font-family: var(--font-gothic);"
                    >
                        Need Something Custom?
                    </h3>
                    <p class="text-gray-dark text-lg">
                        Every project is unique. Let's discuss your specific
                        requirements and create a tailored solution that exceeds
                        expectations.
                    </p>
                    <a
                        href="#contact"
                        class="inline-block bg-black text-white px-8 py-4 uppercase tracking-wider hover:bg-gray-dark transition-all duration-300 shadow-[8px_8px_0px_0px_rgba(61,61,61,1)] hover:shadow-[12px_12px_0px_0px_rgba(0,0,0,1)]"
                    >
                        Let's Talk
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes zoom-in {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
</style>
