    //     tech: ["Next.js", "TypeScript", "Prisma"],
    // },
];
---

<section
    id="portfolio"
    class="min-h-screen py-20 px-6 bg-gradient-to-b from-gray-dark to-black"
>
    <div class="container mx-auto">
        <div class="max-w-6xl mx-auto space-y-16">
            <div class="text-center space-y-6">
                <h2
                    class="text-4xl md:text-6xl font-bold tracking-wider"
                    style="font-family: var(--font-gothic);"
                >
                    Portfolio
                </h2>
                <div class="h-1 w-24 bg-white mx-auto"></div>
                <p
                    class="text-lg text-gray-light leading-relaxed max-w-2xl mx-auto"
                >
                    A selection of projects showcasing the depth and breadth of
                    my frontend development expertise.
                </p>
            </div>

            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    projects.map((project, index) => (
                        <div
                            class="group relative overflow-hidden bg-black border-4 border-white hover:border-gray-light transition-all duration-500 shadow-[8px_8px_0px_0px_rgba(255,255,255,1)] hover:shadow-[12px_12px_0px_0px_rgba(133,133,133,1)] hover:translate-x-[-2px] hover:translate-y-[-2px]"
                            style={`animation: reveal 0.6s ease-out ${index * 0.1}s both;`}
                        >
                            <div class="aspect-square overflow-hidden">
                                <img
                                    src={project.image}
                                    alt={project.title}
                                    class="w-full h-full object-cover grayscale group-hover:grayscale-0 group-hover:scale-110 transition-all duration-500"
                                />
                            </div>

                            <div class="absolute inset-0 bg-black/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-center items-center p-6 text-center space-y-4">
                                <h3 class="text-2xl font-bold uppercase tracking-wider">
                                    {project.title}
                                </h3>
                                <div class="h-0.5 w-16 bg-white" />
                                <p class="text-gray-light uppercase text-sm tracking-wider">
                                    {project.category}
                                </p>
                                <div class="flex flex-wrap gap-2 justify-center">
                                    {project.tech.map((tech) => (
                                        <span class="border border-white px-3 py-1 text-xs uppercase tracking-wider">
                                            {tech}
                                        </span>
                                    ))}
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>

            <div class="text-center pt-8">
                <a
                    href="#contact"
                    class="inline-block bg-white text-black px-12 py-4 text-lg font-bold uppercase tracking-wider hover:bg-gray-light hover:text-white transition-all duration-300 shadow-[8px_8px_0px_0px_rgba(61,61,61,1)] hover:shadow-[12px_12px_0px_0px_rgba(133,133,133,1)] hover:translate-x-[-2px] hover:translate-y-[-2px]"
                >
                    Start Your Project
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes reveal {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
